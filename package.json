{
  "name": "giftcardwallet",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest src",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json}'",
    "lint:fix": "eslint '**/*.{js,jsx,ts,tsx}' --fix",
    "validate": "npm run lint && npm run format && npm run type-check",
    "type-check": "tsc --noEmit",
    "detox:build": "detox build -c ios.sim.debug",
    "detox:test": "detox test -c ios.sim.debug",
    "detox:ci": "detox build -c ios.sim.release && detox test -c ios.sim.release",
    "test:e2e": "npm run detox:build && npm run detox:test",
    "test:e2e:basic": "npm run detox:build && detox test -c ios.sim.debug --testNamePattern='Basic App Flow'",
    "test:e2e:simple": "npm run detox:build && detox test -c ios.sim.debug --testNamePattern='Simple App Tests'",
    "test:e2e:iphone16": "npm run detox:build && detox test -c ios.sim.debug --testNamePattern='iPhone 16 Pro Tests'",
    "test:e2e:android": "detox build -c android.emu.debug && detox test -c android.emu.debug",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:ci": "npm run test:unit && npm run detox:ci"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/datetimepicker": "^8.4.2",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-native/new-app-screen": "0.80.1",
    "@react-navigation/native": "^7.1.14",
    "@react-navigation/native-stack": "^7.3.21",
    "@reduxjs/toolkit": "^2.8.2",
    "react": "19.1.0",
    "react-native": "0.80.1",
    "react-native-safe-area-context": "^5.5.2",
    "react-native-screens": "^4.13.1",
    "react-native-uuid": "^2.0.3",
    "react-native-vector-icons": "^10.3.0",
    "react-redux": "^9.2.0",
    "redux-persist": "^6.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-typescript": "^7.27.1",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "19.0.0",
    "@react-native-community/cli-platform-android": "19.0.0",
    "@react-native-community/cli-platform-ios": "19.0.0",
    "@react-native/babel-preset": "0.80.1",
    "@react-native/eslint-config": "0.80.1",
    "@react-native/metro-config": "0.80.1",
    "@react-native/typescript-config": "0.80.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.2.0",
    "@types/detox": "^17.14.3",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.0",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/react-test-renderer": "^19.1.0",
    "detox": "^20.40.2",
    "eslint": "^8.19.0",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "2.8.8",
    "react-test-renderer": "19.1.0",
    "ts-jest": "^29.4.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
